{
  "name": "show-me-your-enzo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --port 5000",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ignore-path .gitignore --max-warnings 0",
    "format": "prettier --write `fd -e ts -e tsx`; npm run lint -- --fix",
    "seed:submissions": "node db/seed.js",
    "prepare": "husky install"
  },
  "dependencies": {
    "@supabase/supabase-js": "^1.11.12",
    "axios": "^0.21.1",
    "classnames": "^2.3.1",
    "date-fns": "^2.21.3",
    "eslint": "*",
    "eslint-plugin-import": "*",
    "eslint-plugin-promise": "*",
    "fathom-client": "^3.0.0",
    "final-form": "^4.20.2",
    "framer-motion": "^4.1.16",
    "mapbox-gl": "^2.2.0",
    "matter-js": "^0.17.1",
    "next": "10.2.0",
    "nodemailer": "^6.6.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-final-form": "^6.5.3",
    "react-map-gl": "^6.1.15",
    "react-masonry-css": "^1.0.16",
    "use-delayed-state": "^1.2.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@samtgarson/eslint-config": "^2.4.0",
    "@types/matter-js": "^0.14.12",
    "@types/nodemailer": "^6.4.2",
    "@types/react": "^17.0.5",
    "@types/uuid": "^8.3.0",
    "autoprefixer": "^10.2.5",
    "calipers": "^2.0.1",
    "calipers-png": "^2.0.0",
    "dotenv": "^9.0.2",
    "form-data": "^4.0.0",
    "husky": "^6.0.0",
    "postcss": "^8.2.15",
    "prettier": "^2.3.0",
    "random-location": "^1.1.3",
    "sass": "^1.32.13",
    "tailwindcss": "^2.1.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "eslintConfig": {
    "env": {
      "es2020": true
    },
    "ignorePatterns": [
      "*.config.js"
    ],
    "extends": [
      "@samtgarson/eslint-config"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "import/extensions": [
        "error",
        {
          "scss": "always"
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "**/*.ts",
          "**/*.tsx"
        ],
        "extends": [
          "@samtgarson/eslint-config/typescript",
          "@samtgarson/eslint-config/react"
        ]
      },
      {
        "files": [
          "db/seed.js"
        ],
        "rules": {
          "import/no-extraneous-dependencies": 0
        }
      }
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "arrowParens": "avoid",
    "trailingComma": "none"
  }
}
